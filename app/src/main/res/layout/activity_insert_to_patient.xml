<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/EditText_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="식별 번호" />

    <EditText
        android:id="@+id/EditText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름" />

    <EditText
        android:id="@+id/EditText_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="나이" />

    <EditText
        android:id="@+id/EditText_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호" />

    <EditText
        android:id="@+id/EditText_Protector_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 이름" />

    <EditText
        android:id="@+id/EditText_Protector_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보호자 전화번호" />


    <TextView
        android:id="@+id/SendJson_Result_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/httpTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록하기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Info_More_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가 사항 입력" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Vital 및 기타 추가정보를 입력하시려면 버튼을 누르세요." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_Linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mainactivity_framelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/insert_to_frameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
